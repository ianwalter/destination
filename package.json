{
  "name": "@ianwalter/destination",
  "version": "1.0.0",
  "description": "A style sheet that makes website prototypes look beautiful",
  "license": "SEE LICENSE IN LICENSE",
  "author": {
    "name": "Ian Walter",
    "url": "https://ianwalter.dev"
  },
  "scripts": {
    "lint": "eslint .",
    "minify": "csso -i destination.css -o destination.min.css",
    "build:css": "postcss src/destination.css -o destination.css --env production",
    "build:site": "eleventy --input src",
    "build": "run-s build:css build:site minify",
    "serve": "eleventy --serve --input src",
    "dev": "pnpm build:css -- --watch",
    "start": "run-p dev serve"
  },
  "files": [
    "destination.css",
    "destination.min.css"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "css",
    "style",
    "sheet",
    "tailwind",
    "tailwindcss",
    "library"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianwalter/destination.git"
  },
  "bugs": {
    "url": "https://github.com/ianwalter/destination/issues"
  },
  "homepage": "https://github.com/ianwalter/destination#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@changesets/cli": "^2.9.2",
    "@ianwalter/eslint-config": "^5.3.0",
    "@ianwalter/renovate-config": "^1.3.0",
    "@tailwindcss/typography": "^0.2.0",
    "csso-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "tailwindcss": "^1.5.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ianwalter"
    ]
  },
  "renovate": {
    "extends": [
      "@ianwalter"
    ]
  }
}
